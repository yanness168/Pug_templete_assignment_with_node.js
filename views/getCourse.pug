doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        h2 Ongoing Courses
        for course in courses
            ul(style={"font-weight":"bold"}) Course ID: !{JSON.stringify(course.id)}
                li(style={"font-weight":"normal"}) Name: !{JSON.stringify(course.name)}
                li(style={"font-weight":"normal"}) Department: !{JSON.stringify(course.department)} 
                li(style={"font-weight":"normal"}) Description: !{JSON.stringify(course.description)}  
                li(style={"font-weight":"normal"}) Seats available: !{JSON.stringify(course.remaining_seats)}